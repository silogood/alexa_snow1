/// This configuration file contains the minimum configurations required for the SDK Sample App.
///
/// More configuration options are available, which are not mentioned here.
/// See https://developer.amazon.com/en-US/docs/alexa/avs-device-sdk/alexa-client-sdk-config-json.html
/// to learn more about configuration options and default behaviours.
{
    "cblAuthDelegate":{
        "databaseFilePath":"/path/to/file/cblAuthDelegate.db"
    },
    "deviceInfo":{
        "deviceSerialNumber":"<deviceSerialNumber>",
        "clientId":"amzn1.application-oa2-client.<clientId>",
        "productId":"<productId>",
        "manufacturerName": "<manufacturerName>",
        "description": "Prototype Smart Speaker"
    },
    "capabilitiesDelegate":{
        "databaseFilePath":"/path/to/file/capabilitiesDelegate.db"
    },
    "miscDatabase":{
        "databaseFilePath":"/path/to/file/miscDatabase.db"
    },
    "alertsCapabilityAgent":{
        "databaseFilePath":"/path/to/file/alerts.db"
    },
    "lwaAuthorization":{
        "databaseFilePath":"/path/to/file/lwaAuthorizationAdapter.db"
    },
    "speakerManagerCapabilityAgent":{
        "defaultSpeakerVolume":40,
        "defaultAlertsVolume":40,
        "restoreMuteState":true
    },
    "pkcs11Module":{
        "libraryPath":"__undefined__",
        "tokenName":"__undefined__",
        "userPin":"__undefined__",
        "defaultKeyName":"__undefined__"
    },
    "deviceSettings":{
        "databaseFilePath":"/path/to/file/deviceSettings.db",
        "locales":["en-US","en-GB","de-DE","en-IN","en-CA","ja-JP","en-AU","fr-FR","it-IT","es-ES","es-MX","fr-CA",
            "es-US", "hi-IN", "pt-BR", "ar-SA"],
        "defaultLocale":"en-US",
        "localeCombinations":[
            ["en-US", "es-US"],
            ["es-US", "en-US"],
            ["en-US", "fr-FR"],
            ["fr-FR", "en-US"],
            ["en-US", "de-DE"],
            ["de-DE", "en-US"],
            ["en-US", "ja-JP"],
            ["ja-JP", "en-US"],
            ["en-US", "it-IT"],
            ["it-IT", "en-US"],
            ["en-US", "es-ES"],
            ["es-ES", "en-US"],
            ["en-IN", "hi-IN"],
            ["hi-IN", "en-IN"],
            ["fr-CA", "en-CA"],
            ["en-CA", "fr-CA"]
        ],
        "defaultTimezone":"America/Vancouver"
    },
    "bluetooth" : {
        "databaseFilePath":"/path/to/file/bluetooth.db"
    },
    "certifiedSender":{
        "databaseFilePath":"/path/to/file/certifiedSender.db"
    },
    "notifications":{
        "databaseFilePath":"/path/to/file/notifications.db"
    },
    "externalMediaPlayer": {
        "agentString": "CQCAFYNYDC"
    },
    "sampleApp": {
        "displayCardsSupported":true,
        "sensory": {
            "modelFilePath": "/path/to/file/wwe_config.json"
        }
    }
}
